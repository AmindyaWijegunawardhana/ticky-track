{
  "name": "ticky-track-backend",
  "version": "1.0.0",
  "description": "Tiny backend for Ticky Track (one-field input with validation) using Node, Express, MySQL.",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:bdd": "cucumber-js \"test/bdd/features/**/*.feature\" --require \"test/bdd/steps/**/*.js\" --require \"test/bdd/support/**/*.js\"",
    "test:ui": "playwright test ui-tests -c playwright.config.js",
    "test:ui:headed": "playwright test ui-tests --headed -c playwright.config.js",
    "test:api:newman": "newman run postman/TickyTrack.postman_collection.json -e postman/local.postman_environment.json",
    "perf:artillery": "artillery run artillery.yml"
  },
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@playwright/test": "^1.46.0",
    "artillery": "^2.0.9",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "newman": "^6.2.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  }
}
